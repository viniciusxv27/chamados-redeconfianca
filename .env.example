# Configurações de ambiente - copie para .env e ajuste conforme necessário

# Configuração básica
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Configuração do banco de dados
# Para SQLite (desenvolvimento)
# DATABASE_URL=sqlite:///db.sqlite3

# Para PostgreSQL (produção)
# DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Configurações HTTPS (apenas se você tiver SSL configurado)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Se você tiver SSL configurado, altere para:
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Configurações MinIO S3
# Para usar armazenamento local (desenvolvimento), deixe USE_S3=False
# Para usar MinIO S3 (produção), configure as variáveis abaixo
USE_S3=True
